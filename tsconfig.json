{
  "compilerOptions": {
    "allowJs": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["vite/client"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/hooks/useDocument.js",
    "src/hooks/useDocList.js",
    "src/hooks/useAuth.js",
    "src/helpers/error-message.js",
    "src/helpers/utils.js",
    "src/hooks/useHome.js",
    "src/modules/ecoupon/sale-coupon/components/ComDiscountAmount.vue"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
